@model auction.Models.BuyerNameViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Buyers" asp-action="Index">
    <p>
        <select asp-for="BuyerFirst_name" asp-items="Model.First_names">
            <option value="">All</option>
        </select>
        Last Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Buyers![0].first_name_buyer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buyers![0].last_name_buyer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buyers![0].phone_number_buyer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Buyers!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.first_name_buyer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.last_name_buyer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone_number_buyer)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
